<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddData">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:fontFamily="@font/amaranth"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:hint="Add Blood Glucose"
        android:textSize="22dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"/>

    <EditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text1"
        android:fontFamily="@font/amaranth"
        android:hint="Add Blood Pressure"
        android:textSize="22dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"/>
    <EditText
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text2"
        android:hint="Add Oxygen Saturation level"
        android:fontFamily="@font/amaranth"
        android:textSize="22dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"/>
    <EditText
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text3"
        android:hint="Add Heart Rate"
        android:fontFamily="@font/amaranth"
        android:textSize="22dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"/>
    <EditText
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/text4"
        android:layout_marginTop="20dp"
        android:hint="Add Respiration Level"
        android:fontFamily="@font/amaranth"
        android:textSize="22dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/text6"
        android:layout_below="@+id/text5"
        android:layout_marginTop="20dp"
        android:hint="Add Body Temperature"
        android:fontFamily="@font/amaranth"
        android:textSize="22dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"/>

    <Button
        android:id="@+id/firebase_data"
        android:fontFamily="@font/amaranth"
        android:layout_width="150dp"
        android:layout_height="77dp"
        android:layout_below="@+id/text6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="5dp"
        android:text="Save data in firebase"
        android:background="@color/design_default_color_primary"
        />

    <Button
        android:id="@+id/server_data"
        android:layout_width="150dp"
        android:layout_height="77dp"
        android:layout_below="@+id/text5"
        android:fontFamily="@font/amaranth"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="5dp"
        android:background="@color/design_default_color_primary"
        android:text="Save data in server" />
</RelativeLayout>



    </ScrollView>