<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DPrediction">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:text="Check for Disease"
            android:textSize="40sp"
            android:fontFamily="@font/amaranth"
            android:textStyle="bold"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/track_module"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="21dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="284dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/amaranth"
                android:paddingLeft="50px"
                android:text="Prediabetes"
                android:textSize="24sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/stress_module"
            android:layout_width="370dp"
            android:layout_height="70dp"

            android:layout_below="@+id/track_module"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="21dp"

            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/amaranth"
                android:paddingLeft="50px"
                android:text="Diabetes"
                android:textSize="25sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/manual_module"
            android:layout_width="370dp"
            android:layout_height="70dp"

            android:layout_below="@+id/stress_module"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="21dp"

            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/amaranth"
                android:paddingLeft="50px"
                android:text="Bronchiectasis"
                android:textSize="25sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/upload_module"
            android:layout_width="370dp"
            android:layout_height="70dp"

            android:layout_below="@+id/manual_module"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="21dp"

            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/amaranth"
                android:paddingLeft="50px"
                android:text="Coronary Heart Disease"
                android:textSize="25sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/nc_module"
            android:layout_width="370dp"
            android:layout_height="70dp"

            android:layout_below="@+id/upload_module"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="21dp"

            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/txt4"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/amaranth"
                android:paddingLeft="50px"
                android:text="Hypoxemia"
                android:textSize="25sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/asthma_module"
            android:layout_width="370dp"
            android:layout_height="70dp"

            android:layout_below="@+id/nc_module"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="21dp"

            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/txt5"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/amaranth"
                android:paddingLeft="50px"
                android:text="Asthma"
                android:textSize="25sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</ScrollView>